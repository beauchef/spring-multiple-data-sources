# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

# Java
[src/{main,test}/java/**.java]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = true

# JavaScript
[*.js]
indent_style = space
indent_size = 4

# HTML
[*.html]
indent_style = tab
